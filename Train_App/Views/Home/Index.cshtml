@{
    ViewData["Title"] = "Home Page";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Poppins&display=swap');
    .hero {
        font-family: 'Poppins', sans-serif;
        display: flex;
        height: 80vh;
        justify-content: center;
        align-items: center;
    }

    .hero h1, h3, h4{
        font-family: 'Montserrat', sans-serif;
    }

    .special{
        color: #6C63FF;
    }
</style>

<div class="hero">
    <div class="row">
        <!-- Left Content -->
        <div class="col-md-6 content">
            <h1>
                Welcome to <span class="special">Train Booking</span> <br />
                Your Gateway to Seamless Train Travel!
            </h1>
            <h3>
                Discover the Easiest Way to Book Your <br /> <span class="special">Train Tickets</span>
            </h3>
            <!-- Add your additional content here -->
            <h3><span class="special">Key Features:</span></h3>
            <ul>
                <li>Search and Book with Ease</li>
                <li>View Train Details</li>
                <li>Choose Your Seat</li>
                <li>Cancellation Made Simple</li>
            </ul>

            <h4>You can proceed as: </h4>
            <a asp-area="" asp-controller="User" asp-action="Login" class="btn" style="background-color: #6C63FF">User</a>
            <a asp-area="" asp-controller="Admin" asp-action="Login" class="btn btn-default">Admin</a>
        </div>

        <!-- Right Image -->
        <div class="col-md-6">
            <img src="~/images/travel.svg" class="img-responsive" alt="Image">
        </div>
    </div>
</div>

