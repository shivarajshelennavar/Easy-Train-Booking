
@{
    ViewData["Title"] = "Index";
    Layout = "_UserLayout";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Poppins&display=swap');

    .hero {
        font-family: 'Poppins', sans-serif;
        display: flex;
        height: 80vh;
        justify-content: center;
        align-items: center;
    }

    .hero h1, h3, h4 {
        font-family: 'Montserrat', sans-serif;
    }

    .special {
        color: #6C63FF;
    }

    .hero-img{
        padding-top: 40px;
    }
</style>

<div class="hero">
    <div class="row">
        <!-- Left Content -->
        <div class="col-md-6 content">
            <h1>
                Welcome to <span class="special">User Portal</span>
            </h1>
            <h3>
                Discover the Easiest Way to Book Your <br /> <span class="special">Train Tickets</span>
            </h3>

            <h4>You can Perform following <span class="special">operations: </span></h4>
            <a asp-area="" asp-controller="User" asp-action="ShowTrains" class="btn" style="background-color: #6C63FF">Book Ticket</a>
            <a asp-area="" asp-controller="User" asp-action="CancelTrains" class="btn btn-danger">Cancel Ticket</a>
            <a asp-area="" asp-controller="User" asp-action="UpdateWallet" class="btn btn-warning">Update Wallet</a>
            
        </div>

        <!-- Right Image -->
        <div class="col-md-6 hero-img">
            <img src="~/images/user_home.svg" class="img-responsive" alt="Image">
        </div>
    </div>
</div>

